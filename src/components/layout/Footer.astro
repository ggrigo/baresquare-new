---
/**
 * Footer Component
 * Site footer with logo, offices, social links, and navigation columns
 *
 * Uses SmartLink for "Coming Soon" handling at build time.
 * All content is read from site config at build time.
 *
 * Layout (per user request):
 * - Logo
 * - Tagline
 * - Office addresses (London, Thessaloniki)
 * - Social icons
 * - Navigation columns
 * - Legal links
 */

import SmartLink from '../global/SmartLink.astro';
import Container from '../base/Container.astro';
import {
  siteConfig,
  getEnabledFooterColumns,
  getEnabledSocialLinks,
  getEnabledOffices,
} from '../../config/site.config';

// Get footer config
const footerConfig = siteConfig.navigation.footer;

// Logo
const logoSrc = footerConfig.logo.src;
const logoAlt = footerConfig.logo.alt;
const logoWidth = footerConfig.logo.width;
const logoHeight = footerConfig.logo.height;

// Tagline
const tagline = footerConfig.tagline;

// Navigation columns (filtered by enabled)
const columns = getEnabledFooterColumns();

// Legal links (filtered by enabled)
const legalLinks = footerConfig.legal.filter(link => link.enabled);

// Social links (filtered by enabled)
const socialLinks = getEnabledSocialLinks();

// Office locations (filtered by enabled)
const offices = getEnabledOffices();

const currentYear = new Date().getFullYear();

// Social icon SVGs by platform
const socialIcons: Record<string, string> = {
