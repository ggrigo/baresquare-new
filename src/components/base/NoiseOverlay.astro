---
/**
 * NoiseOverlay Component
 * Renders a seamless noise texture overlay
 *
 * Verified values from Figma (node 555:4081):
 * - Background size: 300px 300px
 * - z-index: 4
 * - Default opacity: 0.7 (70%)
 * - pointer-events: none
 */

interface Props {
  /**
   * Opacity of the noise overlay
   * @default 0.7
   */
  opacity?: number;

  /**
   * Additional CSS class
   */
  class?: string;
}

const { opacity = 0.7, class: className } = Astro.props;
---

<div
  class:list={['noise-overlay', className]}
  style={`opacity: ${opacity};`}
  aria-hidden="true"
></div>

<style>
  .noise-overlay {
    position: absolute;
    inset: 0;
    background-image: url('/textures/noise-pattern.png');
    background-size: 300px 300px;
    background-repeat: repeat;
    z-index: 3;
    pointer-events: none;
    border-radius: inherit;
  }
</style>
