---
/**
 * Stats Section Component
 * Display key metrics/statistics with large numbers
 */

import Container from '../base/Container.astro';
import DotTitle from '../ui/DotTitle.astro';

interface Stat {
  value: string;
  label: string;
  description?: string;
}

interface Props {
  /**
   * Section badge
   */
  badge?: string;

  /**
   * Section headline
   */
  headline?: string;

  /**
   * Stats to display
   */
  stats?: Stat[];
}

const {
  badge = 'By the Numbers',
  headline = 'Measurable impact',
  stats = [
    { value: '32%', label: 'Average ROI increase', description: 'for our strategic consulting clients' },
    { value: '150+', label: 'Projects delivered', description: 'across healthcare, biotech, and tech' },
    { value: '98%', label: 'Client satisfaction', description: 'based on post-engagement surveys' }
  ]
} = Astro.props;
---

<section class="stats-section">
  <Container>
    <div class="stats-header">
      <DotTitle label={badge} color="green" />
      <h2>{headline}</h2>
    </div>

    <div class="stats-grid">
      {stats.map((stat) => (
        <div class="stat-item">
          <span class="stat-value">{stat.value}</span>
          <span class="stat-label">{stat.label}</span>
          {stat.description && (
            <span class="stat-description">{stat.description}</span>
          )}
        </div>
      ))}
    </div>
  </Container>
</section>

<style>
  .stats-section {
    padding: var(--space-xl) 0;
  }

  .stats-header {
    margin-bottom: var(--space-xl);
  }

  .stats-header h2 {
    margin-top: var(--space-sm);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    padding: var(--space-lg);
    background: var(--bg-dark);
    border-radius: var(--radius-md);
  }

  .stat-value {
    font-size: var(--text-display);
    font-weight: 500;
    line-height: 1;
    margin-bottom: var(--space-sm);
    background: linear-gradient(135deg, var(--accent-purple), var(--accent-orange));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stat-label {
    font-size: var(--text-h4);
    margin-bottom: var(--space-xs);
  }

  .stat-description {
    font-size: var(--text-small);
    color: var(--text-muted);
  }

  @media (max-width: 991px) {
    .stats-section {
      padding: var(--space-lg) 0;
    }

    .stats-header {
      margin-bottom: var(--space-lg);
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .stat-item {
      padding: var(--space-md);
    }
  }

  @media (max-width: 767px) {
    .stat-value {
      font-size: var(--text-h1);
    }

    .stat-label {
      font-size: var(--text-h5);
    }
  }

  @media (max-width: 479px) {
    .stats-section {
      padding: var(--space-md) 0;
    }

    .stat-value {
      font-size: var(--text-h2);
    }

    .stat-item {
      padding: var(--space-sm);
    }
  }
</style>
