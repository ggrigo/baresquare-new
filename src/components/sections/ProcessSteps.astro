---
/**
 * ProcessSteps Section Component
 * Numbered process/methodology steps
 */

import Container from '../base/Container.astro';
import DotTitle from '../ui/DotTitle.astro';

interface Step {
  number: string;
  title: string;
  description: string;
}

interface Props {
  /**
   * Section badge
   */
  badge?: string;

  /**
   * Section headline
   */
  headline?: string;

  /**
   * Steps to display
   */
  steps?: Step[];
}

const {
  badge = 'Our Process',
  headline = 'How we work',
  steps = [
    {
      number: '01',
      title: 'Discovery',
      description: 'We begin by deeply understanding your challenges, goals, and the landscape in which you operate.'
    },
    {
      number: '02',
      title: 'Analysis',
      description: 'Our team conducts rigorous research and analysis to identify opportunities and develop insights.'
    },
    {
      number: '03',
      title: 'Strategy',
      description: 'We craft actionable strategies that align with your vision and drive measurable outcomes.'
    },
    {
      number: '04',
      title: 'Implementation',
      description: 'We work alongside your team to execute the strategy and ensure successful delivery.'
    }
  ]
} = Astro.props;
---

<section class="process-section">
  <Container>
    <div class="process-layout">
      <div class="process-header">
        <DotTitle label={badge} color="purple" />
        <h2>{headline}</h2>
      </div>

      <div class="process-steps">
        {steps.map((step) => (
          <div class="process-step">
            <span class="step-number">{step.number}</span>
            <div class="step-content">
              <h3 class="step-title">{step.title}</h3>
              <p class="step-description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .process-section {
    padding: var(--space-xl) 0;
  }

  .process-layout {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-xl);
  }

  .process-header {
    position: sticky;
    top: calc(var(--navbar-height) + var(--space-lg));
    align-self: start;
  }

  .process-header h2 {
    margin-top: var(--space-sm);
  }

  .process-steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .process-step {
    display: flex;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--bg-dark);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
  }

  .process-step:hover {
    background: var(--bg-card);
  }

  .step-number {
    font-size: var(--text-h2);
    font-weight: 500;
    color: var(--accent-purple);
    line-height: 1;
    flex-shrink: 0;
    width: 60px;
  }

  .step-content {
    flex: 1;
  }

  .step-title {
    font-size: var(--text-h4);
    margin-bottom: var(--space-xs);
  }

  .step-description {
    color: var(--text-muted);
    line-height: 1.6;
  }

  @media (max-width: 991px) {
    .process-section {
      padding: var(--space-lg) 0;
    }

    .process-layout {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .process-header {
      position: static;
    }

    .process-steps {
      gap: var(--space-md);
    }

    .process-step {
      padding: var(--space-md);
    }
  }

  @media (max-width: 767px) {
    .step-number {
      font-size: var(--text-h3);
      width: 48px;
    }

    .step-title {
      font-size: var(--text-h5);
    }
  }

  @media (max-width: 479px) {
    .process-section {
      padding: var(--space-md) 0;
    }

    .process-step {
      flex-direction: column;
      gap: var(--space-sm);
      padding: var(--space-sm);
    }

    .step-number {
      font-size: var(--text-h4);
      width: auto;
    }
  }
</style>
