---
/**
 * ProcessSteps Section Component
 * Simplified numbered process steps matching Figma node 640-3379
 *
 * Features:
 * - 72px gap between items
 * - Top border separator (white 15% opacity)
 * - Square dot + number badge
 * - Bold title + muted description
 * - Arrow link at bottom
 */

import Container from '../base/Container.astro';
import DotTitle from '../ui/DotTitle.astro';
import ArrowLink from '../ui/ArrowLink.astro';

interface Step {
  number: string;
  title: string;
  description: string;
}

interface Props {
  /**
   * Section badge
   */
  badge?: string;

  /**
   * Section headline
   */
  headline?: string;

  /**
   * Steps to display
   */
  steps?: Step[];

  /**
   * Arrow link text
   */
  linkText?: string;

  /**
   * Arrow link href
   */
  linkHref?: string;
}

const {
  badge = 'Our Process',
  headline = 'How we work',
  steps = [
    {
      number: '01',
      title: 'Human intelligence first',
      description: 'We start by mapping the problem with your team—understanding the real challenges before any technology enters the conversation.'
    },
    {
      number: '02',
      title: 'AI where it matters',
      description: 'We automate only what humans already understand. AI amplifies expertise—it doesn\'t replace the thinking that got you here.'
    },
    {
      number: '03',
      title: 'Metrics that move the business',
      description: 'We measure what your stakeholders actually care about—outcomes tied to growth, efficiency, and strategic goals.'
    }
  ],
  linkText,
  linkHref = '/about'
} = Astro.props;
---

<section class="process-section">
  <Container>
    <div class="process-layout">
      <div class="process-header">
        <DotTitle label={badge} color="purple" />
        <h2 class="process-headline">{headline}</h2>
      </div>

      <div class="process-items">
        {steps.map((step) => (
          <div class="process-item">
            <div class="process-item-number">
              <span class="number-dot"></span>
              <span class="number-text">{step.number}</span>
            </div>
            <div class="process-item-content">
              <h3 class="process-item-title">{step.title}</h3>
              <p class="process-item-description">{step.description}</p>
            </div>
          </div>
        ))}

        {linkText && (
          <ArrowLink text={linkText} href={linkHref} direction="down-right" />
        )}
      </div>
    </div>
  </Container>
</section>

<style>
  .process-section {
    padding: var(--space-xl) 0;
  }

  .process-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
  }

  .process-header {
    position: sticky;
    top: calc(var(--navbar-height) + var(--space-lg));
    align-self: start;
  }

  .process-headline {
    margin-top: var(--space-sm);
    font-size: var(--text-h2);
    line-height: 1.1;
  }

  /* Process items list */
  .process-items {
    display: flex;
    flex-direction: column;
    gap: 72px;
  }

  /* Individual process item */
  .process-item {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding-top: 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  /* Number badge with dot */
  .process-item-number {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .number-dot {
    width: 8px;
    height: 8px;
    background: var(--text-primary);
  }

  .number-text {
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--text-primary);
    line-height: 1.4;
  }

  /* Content */
  .process-item-content {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .process-item-title {
    font-size: 16px;
    font-weight: 500;
    color: var(--text-primary);
    line-height: 1.4;
    margin: 0;
  }

  .process-item-description {
    font-size: 16px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.4;
    margin: 0;
  }

  /* Tablet */
  @media (max-width: 991px) {
    .process-section {
      padding: var(--space-lg) 0;
    }

    .process-layout {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .process-header {
      position: static;
    }

    .process-items {
      gap: 48px;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .process-headline {
      font-size: var(--text-h3);
    }

    .process-items {
      gap: 36px;
    }

    .process-item {
      gap: 18px;
      padding-top: 18px;
    }
  }

  /* Small mobile */
  @media (max-width: 479px) {
    .process-section {
      padding: var(--space-md) 0;
    }

    .process-headline {
      font-size: var(--text-h4);
    }

    .process-items {
      gap: 24px;
    }

    .process-item {
      gap: 12px;
      padding-top: 12px;
    }

    .process-item-title,
    .process-item-description {
      font-size: 14px;
    }
  }
</style>
