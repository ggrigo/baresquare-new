---
/**
 * FeatureGrid Section Component
 * Fixed grid of square feature cards (3-4 items)
 *
 * Config-controlled:
 * - limit: Maximum number of features to display (from featureSlider.limit)
 * - enabled: Item-level enabled flag filters features at build time
 */

import Container from '../base/Container.astro';
import DotTitle from '../ui/DotTitle.astro';
import SmartLink from '../global/SmartLink.astro';
import { getSectionLimit } from '../../config/site.config';

interface Feature {
  enabled?: boolean;
  id?: string;
  title: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  href?: string;
  brandLogo?: string;
}

interface Props {
  /**
   * Section badge
   */
  badge?: string;

  /**
   * Section headline
   */
  headline?: string;

  /**
   * Features to display (3-4 recommended)
   */
  features?: Feature[];
}

const {
  badge = 'Featured Work',
  headline = 'What we\'ve built',
  features = [
    {
      enabled: true,
      id: 'alpha',
      title: 'Project Alpha',
      description: 'Strategic transformation for a leading biotech company',
      image: '/images/feature-1.svg',
      imageAlt: 'Project Alpha showcase',
      href: '/work/alpha'
    },
    {
      enabled: true,
      id: 'beta',
      title: 'Project Beta',
      description: 'Digital innovation in healthcare delivery',
      image: '/images/feature-2.svg',
      imageAlt: 'Project Beta showcase',
      href: '/work/beta'
    },
    {
      enabled: true,
      id: 'gamma',
      title: 'Project Gamma',
      description: 'Research-driven market expansion strategy',
      image: '/images/feature-3.svg',
      imageAlt: 'Project Gamma showcase',
      href: '/work/gamma'
    }
  ]
} = Astro.props;

// Get limit from config (defaults to 4 if not specified)
const configLimit = getSectionLimit('featureSlider') ?? 4;

// Filter by enabled flag, then apply limit
const enabledFeatures = features.filter(f => f.enabled !== false);
const displayFeatures = enabledFeatures.slice(0, configLimit);
---

<section class="feature-grid-section">
  <Container>
    <div class="feature-header">
      <DotTitle label={badge} color="orange" />
      <h2>{headline}</h2>
    </div>

    <div class="feature-grid">
      {displayFeatures.map((feature) => (
        <SmartLink href={feature.href || '#'} class="feature-card">
          <div class="feature-card-image">
            {feature.image && (
              <img src={feature.image} alt={feature.imageAlt || ''} loading="lazy" />
            )}
            {feature.brandLogo && (
              <img src={feature.brandLogo} alt="" class="feature-brand-logo" loading="lazy" />
            )}
          </div>
          <div class="feature-card-content">
            <h3 class="feature-card-title">{feature.title}</h3>
            {feature.description && (
              <p class="feature-card-description">{feature.description}</p>
            )}
          </div>
        </SmartLink>
      ))}
    </div>
  </Container>
</section>

<style>
  .feature-grid-section {
    padding: var(--space-xl) 0;
  }

  .feature-header {
    margin-bottom: var(--space-lg);
  }

  .feature-header h2 {
    margin-top: var(--space-sm);
  }

  /* Grid layout - fits 3-4 cards to width */
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
  }

  /* When only 3 items, they still fill width */
  .feature-grid:has(:nth-child(3):last-child) {
    grid-template-columns: repeat(3, 1fr);
  }

  .feature-card {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--bg-dark);
    transition: background-color var(--transition-fast);
    /* Reset button styles when SmartLink renders as button */
    border: none;
    padding: 0;
    margin: 0;
    font: inherit;
    text-align: left;
    width: 100%;
  }

  .feature-card:hover {
    background: var(--bg-card);
  }

  .feature-card:focus-visible {
    outline: 2px solid var(--accent-purple);
    outline-offset: 2px;
  }

  /* Square image container */
  .feature-card-image {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: var(--bg-card);
    position: relative;
  }

  .feature-card-image > img:first-child {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-medium);
  }

  /* Brand logo - bottom left of image */
  .feature-brand-logo {
    position: absolute;
    bottom: 16px;
    left: 16px;
    height: 20px;
    width: auto;
    opacity: 0.9;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.5));
    transition: opacity var(--transition-fast);
  }

  .feature-card:hover .feature-brand-logo {
    opacity: 1;
  }

  .feature-card:hover .feature-card-image > img:first-child {
    transform: scale(1.05);
  }

  .feature-card-content {
    padding: var(--space-md);
  }

  .feature-card-title {
    font-size: var(--text-h5);
    margin-bottom: var(--space-xs);
    line-height: 1.3;
  }

  .feature-card-description {
    font-size: var(--text-small);
    color: var(--text-muted);
    line-height: 1.4;
  }

  /* Tablet: 2 columns */
  @media (max-width: 991px) {
    .feature-grid-section {
      padding: var(--space-lg) 0;
    }

    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .feature-grid:has(:nth-child(3):last-child) {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Mobile: 1 column */
  @media (max-width: 479px) {
    .feature-grid-section {
      padding: var(--space-md) 0;
    }

    .feature-grid {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
    }

    .feature-grid:has(:nth-child(3):last-child) {
      grid-template-columns: 1fr;
    }

    .feature-card-title {
      font-size: var(--text-body);
    }
  }
</style>
