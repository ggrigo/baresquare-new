---
/**
 * Data & Operations Service Page
 *
 * Service page for Data & Operations pillar.
 * Receives GA4/analytics-related redirects.
 */

// Layout and Navigation
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/layout/Navbar.astro';
import Footer from '../../components/layout/Footer.astro';
import ComingSoonModal from '../../components/global/ComingSoonModal.astro';

// UI Components
import DotTitle from '../../components/ui/DotTitle.astro';

// Content
import { dataOperationsContent } from '../../content/services/data-operations';
---

<Layout
  title="Data & Operations - Baresquare"
  description="Automation that eliminates manual processes and fixes friction. Connecting your existing infrastructure to unlock efficiency."
>
  <Navbar slot="navbar" />

  {/* Hero Section */}
  <section class="service-hero">
    <div class="service-container">
      <DotTitle text={dataOperationsContent.badge} />
      <h1 class="service-headline">{dataOperationsContent.title}</h1>
      <p class="service-description">{dataOperationsContent.description}</p>
    </div>
  </section>

  {/* Problem Section */}
  <section class="service-section">
    <div class="service-container">
      <div class="section-content">
        <h2 class="section-headline">{dataOperationsContent.problem.headline}</h2>
        <p class="section-description">{dataOperationsContent.problem.description}</p>
      </div>
    </div>
  </section>

  {/* Solution Section */}
  <section class="service-section service-section--dark">
    <div class="service-container">
      <div class="section-content">
        <h2 class="section-headline">{dataOperationsContent.solution.headline}</h2>
        <p class="section-description">{dataOperationsContent.solution.description}</p>
      </div>
    </div>
  </section>

  {/* Features Section */}
  <section class="service-features">
    <div class="service-container">
      <h2 class="features-title">What we deliver</h2>
      <div class="features-grid">
        {dataOperationsContent.features.map((feature, index) => (
          <div class="feature-card">
            <span class="feature-number">{String(index + 1).padStart(2, '0')}</span>
            <h3 class="feature-title">{feature.title}</h3>
            <p class="feature-description">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Related Case Study */}
  {dataOperationsContent.relatedCaseStudy && (
    <section class="service-case-study">
      <div class="service-container">
        <a href={dataOperationsContent.relatedCaseStudy.href} class="case-study-card">
          <span class="case-study-label">Case Study</span>
          <h3 class="case-study-headline">{dataOperationsContent.relatedCaseStudy.headline}</h3>
          <span class="case-study-link">
            Read the {dataOperationsContent.relatedCaseStudy.brand} story â†’
          </span>
        </a>
      </div>
    </section>
  )}

  {/* CTA Section */}
  <section class="service-cta">
    <div class="service-container">
      <div class="cta-content">
        <h2 class="cta-headline">{dataOperationsContent.cta.headline}</h2>
        <p class="cta-description">{dataOperationsContent.cta.description}</p>
        <a href={dataOperationsContent.cta.buttonHref} class="cta-button">
          {dataOperationsContent.cta.buttonText}
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <ComingSoonModal />
</Layout>

<style>
  /* Container */
  .service-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--gutter);
  }

  /* Hero Section */
  .service-hero {
    padding: var(--space-xl) 0 var(--space-lg);
    text-align: center;
  }

  .service-headline {
    font-size: var(--text-display);
    font-weight: 500;
    line-height: 1.1;
    margin: var(--space-md) 0 var(--space-sm);
    color: var(--text-primary);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .service-description {
    font-size: var(--text-h4);
    color: var(--text-muted);
    margin: 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
  }

  /* Section Styles */
  .service-section {
    padding: var(--space-xl) 0;
  }

  .service-section--dark {
    background: var(--bg-card);
    margin: 0 2px;
    border-radius: var(--radius-md);
  }

  .section-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .section-headline {
    font-size: var(--text-h2);
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 var(--space-md);
    color: var(--text-primary);
  }

  .section-description {
    font-size: var(--text-h5);
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  /* Features Section */
  .service-features {
    padding: var(--space-xl) 0;
  }

  .features-title {
    font-size: var(--text-small);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin: 0 0 var(--space-lg);
    text-align: center;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }

  .feature-card {
    background: var(--bg-card);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .feature-number {
    font-family: var(--font-mono);
    font-size: var(--text-small);
    color: var(--accent-green);
  }

  .feature-title {
    font-size: var(--text-h4);
    font-weight: 500;
    color: var(--text-primary);
    margin: 0;
  }

  .feature-description {
    font-size: var(--text-body);
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  /* Related Case Study */
  .service-case-study {
    padding: var(--space-lg) 0;
  }

  .case-study-card {
    display: block;
    background: linear-gradient(135deg, var(--bg-card) 0%, rgba(0, 255, 136, 0.05) 100%);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    text-decoration: none;
    transition: border-color 0.2s ease, transform 0.2s ease;
  }

  .case-study-card:hover {
    border-color: var(--accent-green);
    transform: translateY(-2px);
  }

  .case-study-label {
    font-size: var(--text-small);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-green);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .case-study-headline {
    font-size: var(--text-h3);
    font-weight: 500;
    color: var(--text-primary);
    margin: 0 0 var(--space-md);
    line-height: 1.3;
  }

  .case-study-link {
    font-size: var(--text-body);
    color: var(--text-muted);
    transition: color 0.2s ease;
  }

  .case-study-card:hover .case-study-link {
    color: var(--text-primary);
  }

  /* CTA Section */
  .service-cta {
    padding: var(--space-xl) 0;
  }

  .cta-content {
    background: var(--bg-card);
    border-radius: var(--radius-md);
    padding: var(--space-xl);
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-headline {
    font-size: var(--text-h2);
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 var(--space-sm);
    color: var(--text-primary);
  }

  .cta-description {
    font-size: var(--text-h5);
    color: var(--text-muted);
    margin: 0 0 var(--space-md);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: var(--button-height);
    padding: 0 var(--button-padding-x);
    font-family: var(--font-primary);
    font-size: var(--text-small);
    font-weight: 500;
    color: var(--bg-dark);
    background: var(--text-primary);
    border: none;
    border-radius: var(--button-radius);
    cursor: pointer;
    text-decoration: none;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .cta-button:hover {
    opacity: 0.9;
  }

  .cta-button:active {
    transform: scale(0.98);
  }

  /* Responsive */
  @media (max-width: 991px) {
    .service-headline {
      font-size: var(--text-h1);
    }

    .service-description {
      font-size: var(--text-h5);
    }

    .section-headline {
      font-size: var(--text-h3);
    }

    .section-description {
      font-size: var(--text-body);
    }
  }

  @media (max-width: 767px) {
    .service-hero {
      padding: var(--space-lg) 0 var(--space-md);
    }

    .service-headline {
      font-size: var(--text-h2);
    }

    .service-description {
      font-size: var(--text-body);
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .feature-card {
      padding: var(--space-md);
    }

    .cta-content {
      padding: var(--space-lg);
    }

    .cta-headline {
      font-size: var(--text-h3);
    }
  }

  @media (max-width: 479px) {
    .service-headline {
      font-size: var(--text-h3);
    }

    .section-headline {
      font-size: var(--text-h4);
    }

    .cta-headline {
      font-size: var(--text-h4);
    }
  }
</style>
