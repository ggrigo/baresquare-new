---
/**
 * VOGUE Case Study Page
 *
 * E-commerce revenue optimization with autonomous AI.
 */

// Layout and Navigation
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/layout/Navbar.astro';
import Footer from '../../components/layout/Footer.astro';
import ComingSoonModal from '../../components/global/ComingSoonModal.astro';

// UI Components
import DotTitle from '../../components/ui/DotTitle.astro';

// SEO
import { getCaseStudySchema } from '../../config/schemas';

// Content
import { vogueContent } from '../../content/work/vogue';

// Generate Article JSON-LD for case study
const caseStudySchema = getCaseStudySchema({
  headline: 'VOGUE Case Study - +4% Incremental Revenue',
  description: 'How VOGUE achieved +4% incremental revenue with Tywin, our autonomous commerce AI.',
  url: '/work/vogue',
  datePublished: '2024-12-08',
});
---

<Layout
  title="VOGUE Case Study - Baresquare"
  description="How VOGUE achieved +4% incremental revenue with Tywin, our autonomous commerce AI."
  ogType="article"
  jsonLd={caseStudySchema}
>
  <Navbar slot="navbar" />

  {/* Hero Section */}
  <section class="case-hero">
    <div class="case-container">
      <DotTitle text="Case Study" />
      <h1 class="case-brand">{vogueContent.brand}</h1>
      <div class="case-metric">
        <span class="metric-value">{vogueContent.metric}</span>
        <span class="metric-label">{vogueContent.metricLabel}</span>
      </div>
    </div>
  </section>

  {/* Challenge Section */}
  <section class="case-section">
    <div class="case-container">
      <div class="section-grid">
        <div class="section-label">
          <span class="label-text">The Challenge</span>
        </div>
        <div class="section-content">
          <h2 class="section-headline">{vogueContent.challenge.headline}</h2>
          <p class="section-description">{vogueContent.challenge.description}</p>
        </div>
      </div>
    </div>
  </section>

  {/* Solution Section */}
  <section class="case-section case-section--dark">
    <div class="case-container">
      <div class="section-grid">
        <div class="section-label">
          <span class="label-text">The Solution</span>
        </div>
        <div class="section-content">
          <h2 class="section-headline">{vogueContent.solution.headline}</h2>
          <p class="section-description">{vogueContent.solution.description}</p>
        </div>
      </div>
    </div>
  </section>

  {/* Results Section */}
  <section class="case-results">
    <div class="case-container">
      <h2 class="results-title">Results</h2>
      <div class="results-grid">
        {vogueContent.results.map((result) => (
          <div class="result-card">
            <span class="result-value">{result.value}</span>
            <span class="result-label">{result.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Quote Section */}
  <section class="case-quote">
    <div class="case-container">
      <div class="quote-wrapper">
        <blockquote class="quote-text">"{vogueContent.quote.text}"</blockquote>
        <div class="quote-attribution">
          <span class="quote-author">{vogueContent.quote.author}</span>
          <span class="quote-title">{vogueContent.quote.title}</span>
          <span class="quote-company">{vogueContent.quote.company}</span>
        </div>
      </div>
    </div>
  </section>

  {/* Related Service */}
  {vogueContent.relatedService && (
    <section class="case-service">
      <div class="case-container">
        <a href={vogueContent.relatedService.href} class="service-card">
          <span class="service-label">Related Service</span>
          <h3 class="service-headline">{vogueContent.relatedService.headline}</h3>
          <span class="service-link">
            Explore {vogueContent.relatedService.title} →
          </span>
        </a>
      </div>
    </section>
  )}

  {/* CTA Section */}
  <section class="case-cta">
    <div class="case-container">
      <div class="cta-content">
        <h2 class="cta-headline">{vogueContent.cta.headline}</h2>
        <a href={vogueContent.cta.buttonHref} class="cta-button">
          {vogueContent.cta.buttonText}
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <ComingSoonModal />
</Layout>

<style>
  /* Container */
  .case-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--gutter);
  }

  /* Hero Section */
  .case-hero {
    padding: var(--space-xl) 0 var(--space-lg);
    text-align: center;
  }

  .case-brand {
    font-size: clamp(4rem, 12vw, 10rem);
    font-weight: 500;
    line-height: 1;
    margin: var(--space-md) 0;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .case-metric {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: var(--space-sm);
  }

  .metric-value {
    font-size: var(--text-display);
    font-weight: 500;
    color: var(--accent-green);
    font-family: var(--font-mono);
  }

  .metric-label {
    font-size: var(--text-h3);
    color: var(--text-muted);
  }

  /* Section Styles */
  .case-section {
    padding: var(--space-xl) 0;
  }

  .case-section--dark {
    background: var(--bg-card);
    margin: 0 2px;
    border-radius: var(--radius-md);
  }

  .section-grid {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: var(--space-xl);
    align-items: start;
  }

  .section-label {
    padding-top: var(--space-xs);
  }

  .label-text {
    font-size: var(--text-small);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }

  .section-content {
    max-width: 700px;
  }

  .section-headline {
    font-size: var(--text-h2);
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 var(--space-md);
    color: var(--text-primary);
  }

  .section-description {
    font-size: var(--text-h5);
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  /* Results Section */
  .case-results {
    padding: var(--space-xl) 0;
  }

  .results-title {
    font-size: var(--text-small);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin: 0 0 var(--space-lg);
    text-align: center;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
  }

  .result-card {
    background: var(--bg-card);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .result-value {
    font-size: var(--text-h1);
    font-weight: 500;
    color: var(--text-primary);
    font-family: var(--font-mono);
    line-height: 1;
  }

  .result-label {
    font-size: var(--text-small);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  /* Quote Section */
  .case-quote {
    padding: var(--space-xl) 0;
  }

  .quote-wrapper {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .quote-text {
    font-size: var(--text-h3);
    font-style: italic;
    font-weight: 400;
    line-height: 1.4;
    color: var(--text-primary);
    margin: 0 0 var(--space-md);
  }

  .quote-attribution {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    font-size: var(--text-body);
    color: var(--text-muted);
  }

  .quote-author {
    font-weight: 600;
    color: var(--text-primary);
  }

  .quote-title::before,
  .quote-company::before {
    content: '·';
    margin-right: var(--space-xs);
  }

  /* Related Service */
  .case-service {
    padding: var(--space-lg) 0;
  }

  .service-card {
    display: block;
    background: linear-gradient(135deg, var(--bg-card) 0%, rgba(0, 255, 136, 0.05) 100%);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    text-decoration: none;
    transition: border-color 0.2s ease, transform 0.2s ease;
  }

  .service-card:hover {
    border-color: var(--accent-green);
    transform: translateY(-2px);
  }

  .service-label {
    font-size: var(--text-small);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-green);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .service-headline {
    font-size: var(--text-h3);
    font-weight: 500;
    color: var(--text-primary);
    margin: 0 0 var(--space-md);
    line-height: 1.3;
  }

  .service-link {
    font-size: var(--text-body);
    color: var(--text-muted);
    transition: color 0.2s ease;
  }

  .service-card:hover .service-link {
    color: var(--text-primary);
  }

  /* CTA Section */
  .case-cta {
    padding: var(--space-xl) 0;
  }

  .cta-content {
    background: var(--bg-card);
    border-radius: var(--radius-md);
    padding: var(--space-xl);
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-headline {
    font-size: var(--text-h2);
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 var(--space-md);
    color: var(--text-primary);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: var(--button-height);
    padding: 0 var(--button-padding-x);
    font-family: var(--font-primary);
    font-size: var(--text-small);
    font-weight: 500;
    color: var(--bg-dark);
    background: var(--text-primary);
    border: none;
    border-radius: var(--button-radius);
    cursor: pointer;
    text-decoration: none;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .cta-button:hover {
    opacity: 0.9;
  }

  .cta-button:active {
    transform: scale(0.98);
  }

  /* Responsive */
  @media (max-width: 991px) {
    .case-brand {
      font-size: clamp(3rem, 10vw, 6rem);
    }

    .metric-value {
      font-size: var(--text-h1);
    }

    .metric-label {
      font-size: var(--text-h4);
    }

    .section-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .results-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 767px) {
    .case-hero {
      padding: var(--space-lg) 0 var(--space-md);
    }

    .case-metric {
      flex-direction: column;
      gap: var(--space-xs);
    }

    .section-headline {
      font-size: var(--text-h3);
    }

    .section-description {
      font-size: var(--text-body);
    }

    .result-card {
      padding: var(--space-md);
    }

    .result-value {
      font-size: var(--text-h2);
    }

    .quote-text {
      font-size: var(--text-h4);
    }

    .cta-content {
      padding: var(--space-lg);
    }

    .cta-headline {
      font-size: var(--text-h3);
    }

    .quote-attribution {
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media (max-width: 479px) {
    .results-grid {
      grid-template-columns: 1fr;
    }

    .case-brand {
      font-size: clamp(2.5rem, 15vw, 4rem);
    }

    .section-headline {
      font-size: var(--text-h4);
    }

    .quote-text {
      font-size: var(--text-h5);
    }

    .cta-headline {
      font-size: var(--text-h4);
    }
  }
</style>
