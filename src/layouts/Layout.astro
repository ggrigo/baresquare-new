---
/**
 * Layout Component
 *
 * Main layout wrapper with SEO support:
 * - Canonical URLs
 * - Open Graph meta tags
 * - Twitter Card meta tags
 * - JSON-LD structured data
 */

import { seoConfig } from '../config/seo.config';
import JsonLd from '../components/seo/JsonLd.astro';

interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  jsonLd?: Record<string, any>;
}

const {
  title = seoConfig.defaultTitle,
  description = seoConfig.defaultDescription,
  canonicalUrl,
  ogImage = seoConfig.defaultOgImage,
  ogType = 'website',
  jsonLd,
} = Astro.props;

// Build canonical URL (self-referencing)
const canonical = canonicalUrl || new URL(Astro.url.pathname, seoConfig.siteUrl).href;

// Build OG image URL (must be absolute)
const ogImageUrl = ogImage.startsWith('http')
  ? ogImage
  : new URL(ogImage, seoConfig.siteUrl).href;

// Current page URL for OG
const pageUrl = new URL(Astro.url.pathname, seoConfig.siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content={seoConfig.siteName} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={seoConfig.twitterHandle} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />

    <!-- Google Fonts - Geist (matches Figma) + Geist Mono + Newsreader -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600&family=Geist+Mono:wght@500&family=Newsreader:ital,wght@1,400&display=swap" rel="stylesheet">

    <!-- Preload critical textures -->
    <link rel="preload" href="/textures/noise-pattern.png" as="image" />

    <title>{title}</title>

    <!-- JSON-LD Structured Data -->
    {jsonLd && <JsonLd schema={jsonLd} />}

    <!-- Global styles -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body>
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Floating card wrapper for inset effect -->
    <div class="page-wrapper">
      <slot name="navbar" />

      <main id="main-content" role="main">
        <slot />
      </main>

      <slot name="footer" />
    </div>
  </body>
</html>
