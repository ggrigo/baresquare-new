---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Baresquare - Strategic Consulting',
  description = 'We partner with science-led businesses that are shaping the future. Baresquare\'s role is to shape the invisible structures—data, tools, thinking—that power visible breakthroughs.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />

    <!-- Google Fonts - Geist (matches Figma) + Geist Mono + Newsreader -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600&family=Geist+Mono:wght@500&family=Newsreader:ital,wght@1,400&display=swap" rel="stylesheet">

    <!-- Preload critical textures -->
    <link rel="preload" href="/textures/noise-pattern.png" as="image" />

    <title>{title}</title>

    <!-- Global styles -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body>
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Floating card wrapper for inset effect -->
    <div class="page-wrapper">
      <slot name="navbar" />

      <main id="main-content" role="main">
        <slot />
      </main>

      <slot name="footer" />
    </div>
  </body>
</html>
